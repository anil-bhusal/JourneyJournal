<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <!--section for logo-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logow"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/ic_logo11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="#267163"
        />

    <!--section for journey journal text-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="-44dp"
        android:src="@drawable/ic_check_1"
        android:layout_marginLeft="-130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logow" />

    <!--section for login button-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cLogin"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:background="#267163"
        android:clickable="true"
        android:text="Log In"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!--Section for login option with google-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cRegister"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="#267163"
        android:clickable="true"
        android:text="Register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cLogin" />



</androidx.constraintlayout.widget.ConstraintLayout>