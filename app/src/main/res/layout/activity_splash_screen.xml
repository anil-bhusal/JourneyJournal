<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".SplashScreen">

    <!--This is the 1st page that will open when ever our application gets open, which is also
                    splash screen-->

    <!--section for logo-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="130dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/ic_logo11"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="#267163"
        />

    <!--section for journey journal text-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="-44dp"
        android:src="@drawable/ic_check_1"
        android:layout_marginLeft="-130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <!--section for quote for application-->
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almendra_display"
        android:gravity="center"
        android:text="@string/memories"
        android:textColor="#267163"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>